<h1>Result for the search "{{search}}"</h1>

<div class="gallery">
  {{#each artists}}
  <div class="card">
    {{#if this.images.[0]}}
    <img src="{{this.images.[0].url}}" alt="" class="card__img">
    {{else}}
    <img src="/img/default-artist.png" alt="" class="card__img">
    {{/if}}
    <h3 class="card__title">{{this.name}}</h3>
    <div>
      <a class="button" href="/albums/{{this.id}}">View Albums</a>
    </div>
  </div>
  {{/each}}
</div>